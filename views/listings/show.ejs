<% layout("/layouts/boilerplate") %>

    <body>
        <div class="row mt-3 mb-3">
            <div class="col-8 offset-3">
                <h3 class="mb-3">
                    <%=listing.title%>
                </h3>
            </div>
            <div class="card col-6 offset-3 show-card listing-card">


                <img src="<%= listing.image.url%>" class="card-img-top show-img" alt="listing_image">

                <div class="card-body">
                    <p class="card-text">

                        <br>
                        <%=listing.description%>
                            <br>
                            &#8377; <%=listing.price.toLocaleString("en-IN")%>
                                <br>
                                <%=listing.location%>
                                    <br>
                                    <%=listing.country%>
                    </p>
                </div>
            </div>


            <div class="btns offset-3">
                <a class="btn edit-btn mb-4 " href="/listings/<%=listing._id%>/edit">edit </a>

                <br> <br>
                <form method="post" action="/listings/<%=listing._id%>?_method=DELETE">
                    <button class="btn btn-dark mb-3.8 offset-4">Delete </button>
                </form>
            </div>
        </div>

        <hr>

        <div class="col-8 offset-3 mb-3">
            <h3>Leave a comment</h3>
            <form novalidate class="needs-validation" method="post" action="/listings/<%=listing._id%>/reviews">
                <div class="mb-3 mt-3">

                    <label for="rating" class="form-label">Rating </label>
                    <input type="range" 
                    name="review[rating]" 
                    min="1"
                    max="5" 
                    required
                    class="form-range"
                    id="rating"
                    >
                </div>

                <div class="mb-3 mt-3">
                    <label for="comment" class="form-label"> Comment</label>
                    <textarea type="text"
                    id="comment"
                     class="form-control"
                     name="review[comment]" 
                     required id="comment" 
                     rows="5"
                    cols="40"
                    >
                </textarea>
                    <div class="invalid-feedback">
                        Please Add Some Comment for Review.
                    </div>
                </div>
                <button class="btn btn-outline-dark">Submit</button>
            </form>
            <hr>

            <p> <b> All Reviews</b></p>

            <div class="row">
                <% for(review of listing.reviews){%>


                    <div class="card col-5 mb-3 ms-3">
                        <div class="card-body">
                            <h5 class="card-title">Santosh </h5>
                            <p class="card-text">
                                <%= review.comment %>
                            </p>
                            <p class="card-text">
                                <%= review.rating %> stars
                            </p>
                            <form method="post"
                                action="/listings/<%=listing._id%>/reviews/<%=review._id%>?_method=DELETE">
                                <button class="btn btn-sm btn-dark mb-3">Delete</button>
                            </form>
                        </div>
                    </div>

                    <% } %>
            </div>

        </div>
        </div>
    </body>