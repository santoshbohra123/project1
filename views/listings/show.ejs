<% layout("/layouts/boilerplate") %>

    <body>
        <div class="row mt-4 offset-3">
            <div class="col-8">


                <h3>Listing Detail</h3>

                <div class="card">
                    <img src="<%= listing.image.url%>" class="card-img-top show-img" alt="listing_image">


                    <div class="row">
                        <div class="col-12">
                            <div class="card-body">
                                <p class="card-text">
                                    <b>
                                        <%=listing.title%>
                                    </b>
                                    <br>
                                    <%=listing.description%>
                                        <br>
                                        &#8377; <%=listing.price.toLocaleString("en-IN")%>
                                            <br>
                                            <%=listing.location%>
                                                <br>
                                                <%=listing.country%>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>



                <div class="btns">
                    <a class="btn edit-btn mb-4 offset-2.8" href="/listings/<%=listing._id%>/edit">edit </a>

                    <br> <br>
                    <form method="post" action="/listings/<%=listing._id%>?_method=DELETE">
                        <button class="btn btn-dark mb-3.8 offset-4">Delete </button>
                    </form>
                </div>

                <br>
                <br>


            </div>
        </div>

    </body>